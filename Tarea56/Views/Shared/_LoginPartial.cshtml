@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <div>
        <ul class="right hide-on-med-and-down">
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="">
                    <a class="" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
                </li>
                <li class="">
                    <form class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="">Salir</button>
                    </form>
                </li>
            }
            else
            {
                <li class="">
                    <a class="" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
                </li>
                <li class="">
                    <a class="" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesion</a>
                </li>
            }
        </ul>
    </div>