@model Tarea56.Models.Vehiculo

@{
    ViewData["Title"] = "Crear";
}


    <div class="row form_div">
        <h1 class="car_agregando">Agregando una nueva retención</h1>
        <div class="form_div_data">
            <form asp-action="Create" class="col s12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="input-field col s6">
                        <input asp-for="Chasis" class="" />
                        <label asp-for="Chasis" class="control-label"></label>
                        <span asp-validation-for="Chasis"></span>
                    </div>
                    <div class="input-field col s6">
                        <input asp-for="Marca" class="" />
                        <label asp-for="Marca">Marca</label>
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input asp-for="Modelo" class="" />
                        <label asp-for="Modelo" class="">Modelo</label>

                        <span asp-validation-for="Modelo" class="text-danger"></span>
                    </div>
                    <div class="input-field col s6">
                        <input asp-for="Color" class="" />
                        <label asp-for="Color" class="">Color</label>

                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input asp-for="Placa" class="" />
                        <label asp-for="Placa" class=""></label>

                        <span asp-validation-for="Placa" class="text-danger"></span>
                    </div>
                    <div class="input-field col s6">
                        <input asp-for="Year" class="" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s6">
                        <input type="date" asp-for="FechaRetencion" class="" />
                        <label asp-for="FechaRetencion" class=""></label>
                        <span asp-validation-for="FechaRetencion" class="text-danger"></span>
                    </div>
                    <div class="input-field col s6">
                        <input asp-for="Lugar" class="" />
                        <label asp-for="Lugar" class=""></label>
                        <span asp-validation-for="Lugar" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s6">
                        <input asp-for="Lat" class="" />
                        <label asp-for="Lat" class="">Latitud</label>
                        <span asp-validation-for="Lat" class="text-danger"></span>
                    </div>
                    <div class="input-field col s6">
                        <input asp-for="Long" class="" />
                        <label asp-for="Long" class="">Longitud</label>
                        <span asp-validation-for="Long" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="input-field col s6">
                        <input asp-for="NombreConductor" class="" />
                        <label asp-for="NombreConductor" class=""></label>
                        <span asp-validation-for="NombreConductor" class="text-danger"></span>
                    </div>
                    <div class="input-field col s6 ">
                        <input asp-for="Cedula" class="" />
                        <label asp-for="Cedula" class=""></label>
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>
                </div>
              
                <div class="row">
                    <div class="input-field col s8 ">
                        <label asp-for="Comentarios" class=""></label>
                        <input asp-for="Comentarios" class="" />
                        <span asp-validation-for="Comentarios" class="text-danger"></span>
                    </div>
                </div>
          
                <br />
                <div row>
                    <div class="input-field col s1">
                        <a class="btn blue" asp-action="Index">Volver</a> 
                    </div>
                    <div class="input-field col s1">
                        <input type="submit" onclick="Imprimir();" value="Agregar" class="btn green" />
                    </div>
                </div>

            </form>

        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
